.PHONY: all setup clean run

all:
	@$(MAKE) -s --no-print-directory -C ../.. all
	@V=$(V) basedir=../.. dracutdir=../../src/dracut testdir=../ ./test.sh --all
setup:
	@$(MAKE) --no-print-directory -C ../.. all
	@basedir=../.. dracutdir=../../src/dracut testdir=../ ./test.sh --setup
clean:
	@basedir=../.. dracutdir=../../src/dracut testdir=../ ./test.sh --clean
run:
	@basedir=../.. dracutdir=../../src/dracut testdir=../ ./test.sh --run
